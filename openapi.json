  "paths": {
    "/newspapers": {
      "get": {
        "tags": [
          "newspapers"
        ],
        "summary": "Listado de periódicos",
        "description": "Listar periódicos disponibles",
        "operationId": "newspapers",
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Newspapers"
                }
              }
            }
          },
          "404": {
            "description": "Not found"
          }
        }
      }
    },
    "/newspaper": {
      "get": {
        "tags": [
          "newspaper"
        ],
        "summary": "Detalles de periódico específico.",
        "description": "Devuelve detalles generales de un periódico específico.",
        "operationId": "newspaper",
        "parameters": [
          {
            "name": "name",
            "in": "query",
            "description": "Nombre del periódico",
            "required": true,
            "explode": false,
            "schema": {
              "type": "string",
              "example": "El Deber"
            }
          },
          {
            "name": "startDate",
            "in": "query",
            "description": "Para devolver detalles **sólo a partir** de esta fecha. Formato `AAAA/MM/DD`",
            "required": false,
            "explode": false,
            "schema": {
              "type": "string",
              "example": "2017-01-01"
            }
          },
          {
            "name": "endDate",
            "in": "query",
            "description": "Para devolver detalles **sólo hasta** esta fecha. Formato `AAAA/MM/DD`",
            "required": false,
            "explode": false,
            "schema": {
              "type": "string",
              "example": "2020-01-01"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Detalles de periódico",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Newspaper"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid status value"
          },
          "404": {
            "description": "Not found"
          }
        }
      }
    },
