    "/fullTextSearch": {
      "get": {
        "tags": [
          "full text search"
        ],
        "summary": "Búsqueda de texto en todos los artículos.",
        "description": "Realiza una búsqueda rápida del texto solicitado en todos los artículos. Los artículos encontrados se ordenan de mayor a menor por el mejor puntaje de aciertos.",
        "operationId": "fullTextSearch",
        "parameters": [
          {
            "name": "searchText",
            "in": "query",
            "description": "Texto a buscar en todos los artículos, entre 3 a 750 caracteres.",
            "required": true,
            "schema": {
              "type": "string",
              "example": "Zarate Willca"
            }
          },
          {
            "name": "rate",
            "in": "query",
            "description": "Puntaje de acierto mínimo requerido, por defecto es 9. Este número entre 1 y 100 sirve para filtrar artículos que tengan al menos ese porcentaje de aciertos en la búsqueda del texto dado.",
            "required": false,
            "schema": {
              "type": "integer",
              "example": 9
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Limita el número de resultados.",
            "required": false,
            "explode": false,
            "schema": {
              "type": "integer",
              "example": 1000
            }
          },
          {
            "name": "offset",
            "in": "query",
            "description": "Desplazamiento, para devolver resultados a partir de este valor.",
            "required": false,
            "schema": {
              "type": "integer",
              "example": 0
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Entidades o nombres encontrados",
